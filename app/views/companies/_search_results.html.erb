<% if companies.any? %>
  <div class="row">
    <div class="col-12">
      <h4 class="mb-3">
        <i class="bi bi-list-ul"></i> 
        Search Results 
        <span class="badge bg-primary"><%= companies.count %></span>
      </h4>
      
      <div class="table-responsive">
        <table class="table table-hover">
          <thead class="table-light">
            <tr>
              <th><i class="bi bi-building"></i> Company Name</th>
              <th><i class="bi bi-geo-alt"></i> City</th>
              <th><i class="bi bi-hash"></i> CoC Number</th>
            </tr>
          </thead>
          <tbody>
            <% companies.each do |company| %>
              <tr>
                <td>
                  <strong><%= company.company_name %></strong>
                </td>
                <td>
                  <span class="text-muted"><%= company.city %></span>
                </td>
                <td>
                  <code><%= company.coc_number %></code>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <!-- Pagination -->
      <% if companies.respond_to?(:current_page) %>
        <div class="d-flex justify-content-center mt-4">
          <%= paginate companies %>
        </div>
      <% end %>
    </div>
  </div>
<% elsif params[:q].present? %>
  <div class="row">
    <div class="col-12">
      <div class="alert alert-info text-center">
        <i class="bi bi-info-circle"></i>
        <h5>No companies found</h5>
        <p class="mb-0">Try searching with different keywords or check your spelling.</p>
      </div>
    </div>
  </div>
<% else %>
  <div class="row">
    <div class="col-12">
      <div class="text-center text-muted py-5">
        <i class="bi bi-search display-1"></i>
        <h4 class="mt-3">Start searching for companies</h4>
        <p>Enter a company name, city, or CoC number to get started.</p>
      </div>
    </div>
  </div>
<% end %>
